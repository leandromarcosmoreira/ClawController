# ClawController Frontend pnpm configuration
# Inherits from global .npmrc in parent directory

# Auto-install peer dependencies for React ecosystem
auto-install-peers=true

# Strict peer dependencies for better compatibility
strict-peer-dependencies=true

# Use shamefully-hoist for React compatibility
shamefully-hoist=true

# Prefer offline for faster builds
prefer-offline=true

# Enable strict scripts for security
strict-scripts=true

# Resolution mode for React ecosystem
resolution-mode=highest
